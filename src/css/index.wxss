* {
  margin: 0;
  padding: 0;
  font: 14px/20px Helvetica, sans-serif, arial;
}
ul li {
  list-style: none;
}
body {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}
.content-wrap {
  height: 100vh;
  width: 100vw;
  padding-top: 60px;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.3);
}
.content-wrap .song-img {
  width: 50%;
  height: 0;
  padding-top: 50%;
  position: relative;
  margin: 0 auto 40px;
}
.content-wrap .song-img .img-wrapper {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.content-wrap .song-img .img-wrapper img {
  height: 100%;
  width: 100%;
}
.content-wrap .song-info {
  height: 126px;
  width: 100%;
  text-align: center;
}
.content-wrap .song-info .song-name {
  width: 80%;
  font-size: 24px;
  line-height: 36px;
  color: rgba(255, 255, 255, 0.86);
  margin: 0 auto 8px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content-wrap .song-info .singer-name,
.content-wrap .song-info .album-name {
  font-size: 11px;
  line-height: 16px;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 6px;
}
.content-wrap .play-area {
  display: flex;
}
.content-wrap .play-area .cur-time,
.content-wrap .play-area .all-time {
  width: 60px;
  height: 40px;
  color: #fff;
  line-height: 40px;
  text-align: center;
}
.content-wrap .play-area .pro-wrapper {
  flex-grow: 1;
  position: relative;
  overflow: hidden;
}
.content-wrap .play-area .pro-wrapper .pro-bottom,
.content-wrap .play-area .pro-wrapper .pro-top {
  height: 1px;
  width: 100%;
  position: absolute;
  top: 20px;
}
.content-wrap .play-area .pro-wrapper .pro-bottom {
  background-color: rgba(255, 255, 255, 0.3);
}
.content-wrap .play-area .pro-wrapper .pro-top {
  transform: translateX(-100%);
  background-color: #ffffff;
  position: relative;
}
.content-wrap .play-area .pro-wrapper .pro-top .slide-point {
  height: 21px;
  width: 21px;
  position: absolute;
  right: -10px;
  top: -10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content-wrap .play-area .pro-wrapper .pro-top .slide-point::after {
  height: 5px;
  width: 5px;
  background-color: #fff;
  content: '';
  border-radius: 50%;
}
.content-wrap .play-control {
  position: absolute;
  bottom: 0;
  height: 60px;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
}
.content-wrap .play-control .btn-wrap {
  flex-grow: 1;
  background-repeat: no-repeat;
  background-size: 20px 20px;
  background-position: center;
}
.content-wrap .play-control .like-btn {
  background-image: url(/img/icon-like.png);
}
.content-wrap .play-control .like-btn.liked {
  background-image: url(/img/icon-like-solid.png);
}
.content-wrap .play-control .prev-btn {
  background-image: url(/img/icon-prev.png);
}
.content-wrap .play-control .play-btn {
  background-image: url(/img/icon-play.png);
}
.content-wrap .play-control .play-btn.pause {
  background-image: url(/img/icon-pause.png);
}
.content-wrap .play-control .next-btn {
  background-image: url(/img/icon-next.png);
}
.content-wrap .play-control .list-btn {
  background-image: url(/img/icon-list.png);
}
